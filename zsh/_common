# 日本語環境の設定
export LANG=ja_JP.UTF-8
export JLESSCHARSET=japanese
# ls
alias la="ls -a"
alias ll="ls -l"
alias lal="ls -al"
alias lla="ls -al"

# Zsh オプション
## ディレクトリ名だけでcdする
setopt auto_cd
## cd したら自動的にpushdする
setopt auto_pushd
## sudo でも補完の対象
zstyle ':completion:*:sudo:*' command-path /usr/local/sbin /usr/local/bin /usr/sbin /usr/bin /sbin /bin
## ビープ音を鳴らさないようにする
setopt no_beep
## ディレクトリを水色にする｡
export LS_COLORS='di=01;36'
## ファイルリスト補完でもlsと同様に色をつける｡
zstyle ':completion:*' list-colors ${(s.:.)LS_COLORS}
## 8 ビット目を通すようになり、日本語のファイル名を表示可能
setopt print_eight_bit
##プロンプトの設定
RPROMPT='%F{2}[%n@%m]'
PROMPT='%F{2}%~%#%f '
## Zsh ヒストリの設定
HISTFILE=~/.zsh_history
HISTSIZE=1000000
SAVEHIST=1000000

# HomeとEndのキーのバインドを修正
#bindkey "${terminfo[khome]}" beginning-of-line
#bindkey "${terminfo[kend]}" end-of-line

# Terraform
alias tf="terraform"

# kubernets
kubectl() {
  unfunction "$0"
  source <(kubectl completion zsh)
  $0 "$@"
}


kubesec() {
  unfunction "$0"
  source <(kubesec completion zsh)
  $0 "$@"
}

ksec() {
  unfunction "$0"
  source <(kubesec completion zsh)
  $0 "$@"
}

# AWS
export AWS_DEFAULT_REGION=ap-northeast-1
alias instance-list="aws ec2 describe-instances --output table --filters 'Name=instance-state-name,Values=running' --query 'Reservations[].Instances[].{Name:Tags[?Key==\`Name\`] | [0].Value,InstanceId:InstanceId}'"
alias start-session="aws ssm start-session --target "

## goenv
export GOPATH="$HOME/go"
export GOBIN="$GOPATH/bin"
export PATH="$GOPATH/bin:$PATH"

